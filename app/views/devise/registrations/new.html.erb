<div class="container">
  <div class="row">
    <div class="col-md-10">
    <div class="col-md-3 back-gray mt-5">
      <h3>新規会員登録</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="form-group row">
        <%= f.label "名前", class: "col-md-2 col-form-label" %>
        <%= f.label "(姓)", class: "col-md-1 col-form-label" %>
        <div class="form-group col-md-4">
          <%= f.text_field :last_name, autofocus: true,  placeholder: "令和", class: "form-control" %>
        </div>
        <%= f.label "(名)", class: "col-md-1 col-form-label" %>
        <div class="col-md-4">
          <%= f.text_field :first_name, autofocus: true,  placeholder: "道子", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label "フリガナ", class: "col-md-2 col-form-label" %>
        <%= f.label "(セイ)", class: "col-md-1 col-form-label" %>
        <div class="form-group col-md-4">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control" %>
        </div>
        <%= f.label"(メイ)", class: "col-md-1 col-form-label" %>
        <div class="col-md-4">
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-md-3 col-form-label" %>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-md-3 col-form-label" %>
        <div class="col-md-4">
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", autocomplete: "postal_code", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :address, "住所", class: "col-md-3 col-form-label" %>
        <div class="col-md-8">
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address", class: "form-control" %>
        </div>
      </div>
    
    <div class="form-group row">
      <%= f.label :phone_number, "電話番号（ハイフンなし）", class: "col-md-3 col-form-label" %>
      <div class="col-md-4">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "000000000", autocomplete: "phone_number", class: "form-control" %>
      </div>
    </div>
    
      <div class="form-group row">
        <%= f.label :password, " パスワード(6文字以内)", class: "col-md-3 col-form-label" %>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= f.label :password_confirmation, " パスワード(確認用)", class: "col-md-3 col-form-label" %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <div class="col-md-4 text-right">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
    
      <div class="row">
        <div class="col-md-4">
          <h3 class="back-gray">既に登録済みの方</h3>
          <p><%= link_to "こちら", new_end_user_session_path %>からログインしてください</p>
        </div>
      </div>
    </div>
  </div>
</div>
