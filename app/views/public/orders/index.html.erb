<div class="container">
  <div class="row mt-5">
    <div class="my-page-title">
      <h3>注文一覧</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-12">
      <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= l order.created_at %></td>
          <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_price.to_s(:delimited) %>円</td>
          <td><%= order.order_status_i18n %></td>
          <td><%= link_to "注文詳細", order_path(order), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
</div>