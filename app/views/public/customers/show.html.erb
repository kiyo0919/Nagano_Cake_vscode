<div class="container">
  <div class="row mt-5">
    <div class="my-page-title">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-6">
      <div class="my-page">
        <strong>登録情報</strong>
        <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <table class="table">
        <tr>
          <th>氏名</th>
          <td><%= @user.last_name %> <%= @user.first_name%></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @user.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <strong class="col-md-1">配送先</strong>
    <%= link_to "一覧を見る", addresses_path , class: "btn btn-primary" %>
  </div>
  <div class="row mt-3">
    <strong class="col-md-1">注文履歴</strong> 
    <%= link_to "一覧を見る", "#", class: "btn btn-primary" %>
  </div>
  <div class="row mt-3">
    <%= link_to "パスワードを変更する", "#" %>
  </div>
</div>
