<div class="container">
  <div class="row mt-5">
    <div class="col-md-2 offset-md-3">
      <div class="public-item-index">
        <h3><strong>商品一覧</strong></h3>
      </div>
    </div>
    <div class="col-md-1 mt-2">
      <p><strong>(全<%= @items.count%>件)</strong></p>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-2">
      <div class="genre-table">
        <table border="2" width="200px">
          <thead>
            <th><strong>ジャンル検索</strong></th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= link_to genre.name, items_path(genre_id: genre) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-9 offset-md-1">
      <div class="row">
          <% @items.each do |item| %>
            <div class="col-md-3">
              <%= link_to item_path(item) do %>
                <%=  attachment_image_tag item, :image, size: "200x150" %>
                <p><strong><%= item.name %></strong></p>
                <p><strong>￥<%= item.add_tax_price.to_s(:delimited) %></strong></p>
              <% end %>
            </div>
          <% end %>
          <%# <%= paginate @items %> %>
      </div>
    </div>
  </div>
</div>