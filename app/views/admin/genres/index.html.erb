<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <div class="admin-genres-index">
        <h3>ジャンル一覧・追加</h3>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-10">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :name, "ジャンル名", class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名", class: "form-control" %>
          </div>
          <div class="col-md-2">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>