<div class="container">
  <div class="row mt-5">
    <div class="admin-user-index">
      <h3><%= @user.last_name + @user.first_name %>さんの会員詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mt-5">
      <table class="table">
        <tr>
          <th><h5>会員ID</h5></th>
          <td><h5><%= @user.id %></h5></td>
        </tr>
        <tr>
          <th><h5>氏名</h5></th>
          <td><h5><%= @user.last_name + @user.first_name %></h5></td>
        </tr>
        <tr>
          <th><h5>フリガナ</h5></th>
          <td><h5><%= @user.last_name_kana + @user.first_name_kana %></h5></td>
        </tr>
        <tr>
          <th><h5>郵便番号</h5></th>
          <td><h5><%= @user.postal_code %></h5></td>
        </tr>
        <tr>
          <th><h5>住所</h5></th>
          <td><h5><%= @user.address %></h5></td>
        </td>
        <tr>
          <th><h5>電話番号</h5></th>
          <td><h5><%= @user.phone_number %></h5></td>
        </tr>
        <tr>
          <th><h5>メールアドレス</h5></th>
          <td><h5><%= @user.email %></h5></td>
        </tr>
        <tr>
          <th><h5>会員ステータス</h5></th>
          <td>
            <% if @user.is_valid %>
              <h5 style="color: #808080;">退会済</h5>
            <% else %>
              <h5 style="color: green;">有効</h5>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-2">
      <%= link_to "編集する", edit_admin_customer_path(@user), class: "btn btn-success" %>
    </div>
    <div class="col-md-4">
      <%= link_to "注文履歴一覧をみる", admin_root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>