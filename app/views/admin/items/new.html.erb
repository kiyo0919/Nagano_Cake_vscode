<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <div class="admin-item-new">
        <h3>商品新規登録</h3>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-10 offset-md-2">
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :image_id, "商品画像",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, "商品名",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, "商品説明",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_area :description, placeholder: "ここに説明文を記述します", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :price_without_tax, "税抜価格",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :price_without_tax, placeholder: "1000", class: "form-control" %>
          </div>
          <span class="col-md-1">円</span>
        </div>
        <div class="form-group row">
          <%= f.label :is_sale, "販売ステータス",  class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.radio_button :is_sale, true %>
            <%= f.label :is_sale, '販売中', value: true %>
            <%= f.radio_button :is_sale, false %>
            <%= f.label :is_sale, '販売停止中', value: false %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5 offset-md-4">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>