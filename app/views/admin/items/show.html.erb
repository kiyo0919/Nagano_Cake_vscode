<div class="container">
  <div class="row mt-5">
    <div class="col-md-2">
      <h3 style="background-color:#EEEEEE;">商品詳細</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <%=  attachment_image_tag @item, :image, size: "300x200" %>
        </div>
        <div class="col-8 mt-2">
          <table class="table table-borderless ml-5">
            <tr>
              <td width="15px">商品名</td>
              <td width="80px"><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.description %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td><%= (@item.price_without_tax * 1.1).to_i %>円(<%= @item.price_without_tax %>円)</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_sale %>
                  <h5 style="color: green;"><strong>販売中</strong></h5>
                <% else %>
                  <strong><h5 style="color: red;"><strong>販売停止中</strong></h5>
                <% end %>
              </td>
            </tr>
          </table>
          <%= link_to "編集する", edit_admin_item_path, class:'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>

