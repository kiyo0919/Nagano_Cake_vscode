<div class="container">
  <div class="row mt-5">
    <div class="admin-order-index">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <% @quantity = 0 %>
          <% order.order_details.each do |order_detail| %>
    				<% @quantity += order_detail.amount %>
    			<% end %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td><%= order.end_user.last_name %><%= order.end_user.first_name %>
            </td>
            <td>
    					<%= @quantity %>
            </td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>